{% extends 'base.html.twig' %}

{% block title %}Connectez-vous
{% endblock %}

{% block body %}
	<body class="bodyconnexion">
		<div class="connexionPageBody pt-5">

			<section class="connexionPageTitle p-4">
                <h1 class="fw-bold">Connectez-vous</h1>
                <h2>à votre espace personnel</h2>
			</section>

			{% if error %}
				<section class="px-5">
					<div class="connexionFormErrors text-center alert alert-danger p-2 ps-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				</section>

			{% endif %}

			<section class="connexionPageForm p-5 pt-2 pb-2">
				<form class="d-flex justify-content-center flex-column" action="{{ path('app_login') }}" method="post">
					<div class="form-group mt-3">
						<label class="connexionLabel pb-2 w-100" for="username">Adresse Email</label>
						<input class="connexionInput p-2 ps-3 col-12 border-0" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Entrez votre adresse e-mail">
					</div>
					<div class="form-group mt-5">
						<label class="connexionLabel pb-2 w-100" for="password">Mot de passe</label>
						<input class="connexionInput p-2 ps-3 col-12" type="password" id="password" name="_password" placeholder="Entrez votre adresse mot de passe">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<input type="hidden" name="_target_path" value="/login/redirect">
					</div>
					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-light registrationBtn p-3 col-8 m-5 mb-3">Se connecter</button>
					</div>
				</form>
			</section>

			<section class="connexionPageInfo m-5 mb-3 p-2 mt-2 text-center text-light fst-italic">
				<h3 class="fw-bold">
					Informations:</h3>
				<p class="p-login">
					Vous trouverez votre mot de passe sur le document d’admission transmis par le secrétariat.
				</p>
				<p class="p-login">En cas de perte du mot de passe, rapprochez-vous de votre secrétariat.
				</p>
			</section>
			<section class="text-center">
				<a class="connexionPageLink text-light btn btn-outline-light" href="/">Retour à la page d'accueil</a>
			</section>
		</div>
	</body>
{% endblock %}
