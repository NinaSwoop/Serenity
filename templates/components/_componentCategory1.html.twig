{% include "/components/_progressbar.html.twig" %}

<h2 class="my-3 mx-4">Schémas et documentations</h2>
<section class="container d-flex justify-content-center">
	<div class="row">
		{% for schema in category.schemaContents %}
			{% if loop.index0 <= 2 %}
				<div class="card schema-card col-6 g-4">
					<img class="rounded-4 schema-picture h-100" src="{{asset('build/images/' ~ schema.picture)}}" alt="Card image cap">
				</div>
			{% endif %}
			{% if loop.index0 == 3 %}
				<a href="">
					<div class="card schema-card col-6 g-4">
						<img class="rounded-4 schema-picture h-100" src="{{asset('build/images/' ~ schema.picture)}}" alt="Card image cap">
					</div>
				</a>
			{% endif %}
		{% endfor %}
	</div>
	{% include "/component/_component_shemas_modal.html.twig" %}

</section>


<h2 class="my-3 mx-4">Les vidéos du Dr. Noailles</h2>
<section class="mx-4">
	{% for video in category.videos %}
		<div class="card mb-3 ">
			<div class="row g-0">
				<div class="col-4 video-car">
					<img src="{{asset('build/images/' ~ video.picture)}}" class="img-fluid rounded-start video-picture h-100" alt="...">
				</div>
				<div class="col-8">
					<div class="card-body">

						<p class="card-text">{{video.title}}</p>
						<p class="card-text">
							<small class="text-muted">{{video.duration}}
								minutes</small>
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}


</section>
