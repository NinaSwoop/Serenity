{% extends 'base.html.twig' %}

{% block title %}Document index
{% endblock %}

{% block body %}
	<div class="container-fluid d-md-flex p-0">
		<div class="col-3">
			{% include "admin/_layout.html.twig" %}
		</div>
		<div class="col-9">
			<h1>Document index</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Title</th>
						<th>Picture</th>
						<th>ReadTime</th>
						<th>Description</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for document in documents %}
						<tr>
							<td>{{ document.id }}</td>
							<td>{{ document.title }}</td>
							<td>{{ document.picture }}</td>
							<td>{{ document.readTime }}</td>
							<td>{{ document.description }}</td>
							<td>
								<a href="{{ path('app_document_show', {'id': document.id}) }}">show</a>
								<a href="{{ path('app_document_edit', {'id': document.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_document_new') }}">Create new</a>
		</div>
	</div>
{% endblock %}
