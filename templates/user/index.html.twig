{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Les patients
{% endblock %}

{% block body %}
	<h1 class="text-center m-3">Les patients</h1>
	<div class="d-flex justify-content-center m-3">
		<a class="btn btn-primary m-2" href="{{ path('app_user_new') }}">Ajouter un patient</a>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Email</th>
				<th>Téléphone</th>
				<th>Secretariat</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.phonenumber }}</td>
					<td>
						{{ user.secretariat.name|capitalize}}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
						<a class="btn btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">Détail</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
