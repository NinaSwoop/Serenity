{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Email</th>
				<th>Indicateur de stress</th>
				<th>Téléphone</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.email }}</td>

					<td></td>
					<td>{{ user.phonenumber }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
                <tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
     </tbody>
     </table>

	<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
